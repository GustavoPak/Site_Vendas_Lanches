@model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="">
            </div>

            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
                <p class="card-text">@Model.DescricaoDetalhada</p>

                <div class="btn btn-group align-content-lg-end">
                    <a class="btn btn-dark" asp-controller="Lanche" asp-action="List" asp-route-categoria="null">
                        Voltar aos lanches
                    </a>

                    <a class="btn btn-dark" asp-controller="CarrinhoCompra" asp-action="AdicionarCarrinho" asp-route-lancheid="@Model.LancheId">
                        Adicionar ao carrinho
                    </a>
                </div>
            </div>
        </div>
    </div>
    </div>
