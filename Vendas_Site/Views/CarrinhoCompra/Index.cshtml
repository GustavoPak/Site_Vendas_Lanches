@model CarrinhoCompraVIewModel

<div class="container">
    <div class="row">
        <img src="~/images/Full-Cart-icon.png" width="5px" height="20px" />
        <h3>Seu carrinho:</h3>
    </div>
</div>

<table class="table">
    <thead>
    <th>Quantidade</th>
    <th>Lanche</th>
    <th class="text-right">preço</th>
    <th class="text-right">subTotal</th>
    </thead>

    <tbody>
        @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
        {
            <tr>
                <td class="text-center">@item.Quantidade</td>
                <td class="text-left">@item.Lanche.Nome</td>
                <td class="text-right">@item.Lanche.Preco.ToString("c")</td>
                <td>@((item.Lanche.Preco * item.Quantidade).ToString("c"))</td>
                <td class="text-center">
                    <a asp-controller="CarrinhoCompra" asp-action="RemoverDoCarrinho" asp-route-id="@item.Lanche.LancheId"><img src="~/images/remove.ico"
                        width="10px" height="10px"/></a>
                </td>
          </tr>
        }
    </tbody>

    <tfoot>
    <td colspan="3" class="text-right">Total:</td>
    <td class="text-right">
            @Model.CarrinhoCompraTotal.ToString("c")
    </td>
    </tfoot>
</table>

<div class="text-right">
    <div class="btn-group">
        <a class="btn btn-outline-dark" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
        &nbsp;&nbsp;&nbsp;
        <a class="btn btn-outline-dark" asp-controller="Lanche" asp-action="List">Continuar Comprando</a>
    </div>
</div>
<div>
</div>
