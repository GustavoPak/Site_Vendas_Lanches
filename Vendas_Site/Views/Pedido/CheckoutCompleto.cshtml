@model Pedido

<div class="container">
    
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@ViewBag.CheckoutDoneMessage</h1>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <p>Cliente : <strong>@Model.Nome</strong></p>
            <p>Data do pedido : <strong>@Model.PedidoEnviado</strong></p>
            <p>Numero do pedido : <strong>@Model.PedidoId</strong></p>
        </div>


        <table class="table">
            <tr>
                <th></th>
                <th>Quantidade</th>
                <th>Lanche</th>
                <th>Preço</th>
            </tr>
            
                @foreach (var item in Model.PedidoItens)
                {
                    <tr>
                    <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" /></td>
                    <td>@item.Quantidade</td>
                    <td>@item.Lanche.Nome</td>
                    <td>@item.Lanche.Preco.ToString("c")</td>
                    </tr>
                }
            
        </table>

        <div class="container">

            <h4 class="align-content-center">Total do pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
        </div>
    </div>
</div>

<div class="form-group" style="text-align:center">
    <h3>
        <a class="nav-link text-info" style="color:black" asp-action="Index" asp-controller="Home">Retornar</a>
    </h3>
</div>