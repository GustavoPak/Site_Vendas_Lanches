@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" /></p>
    <p>Preço: @Model.Preco.ToString("c")</p>
    <h4>
        <a asp-controller="Lanche" style="color:black" asp-action="Details" asp-route-lancheid="@Model.LancheId">
         @Model.Nome</a>
    </h4>
    <p>Descrição: @Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-dark" asp-controller="CarrinhoCompra" asp-action="AdicionarCarrinho" asp-route-lancheid="@Model.LancheId">
                Incluir no carrinho
            </a>
        </p>
    </div>
</div>